{
  "$schema": "https://opencode.ai/config.json",
  // Theme name to use for the interface
  "theme": "one-dark",
  "tui": {
    // TUI scroll speed. Default: 2, minimum: 1
    "scroll_speed": 5
  },
  // MCP (Model Context Protocol) server configurations
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ]
    },
    "serena": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--enable-web-dashboard",
        "false",
        "--enable-gui-log-window",
        "false",
        "--project",
        "\"$(pwd)\""
      ]
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    }
  },
  // Array of plugin paths or names
  "plugin": [
    "opencode-skills@latest"
  ],
}
