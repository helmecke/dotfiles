{
  "$schema": "https://opencode.ai/config.json",
  // Theme name to use for the interface
  "theme": "one-dark",
  "tui": {
    // TUI scroll speed. Default: 2, minimum: 1
    "scroll_speed": 5
  },
  "model": "github-copilot/claude-sonnet-4.5",
  "agent": {
    "plan": {
      "model": "github-copilot/claude-opus-4.5",
      "prompt": "{file:./prompt/plan.md}"
    },
    "explore": {
      "model": "github-copilot/grok-code-fast-1",
      "prompt": "{file:./prompt/explore.md}"
    },
    "research": {
      "model": "github-copilot/claude-haiku-4.5",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      },
      "temperature": 0.1
    }
  },
  "lsp": {
    "pyright": {
      "disabled": true
    },
    "ty": {
      "command": [
        "uvx",
        "ty",
        "server"
      ],
      "extensions": [
        ".py"
      ],
    },
    "ruff": {
      "command": [
        "uv",
        "run",
        "ruff",
        "server"
      ],
      "extensions": [
        ".py",
      ]
    }
  },
  "formatter": {
    "ruff-fix": {
      "command": [
        "uvx",
        "ruff",
        "check",
        "--fix",
        "$FILE"
      ],
      "extensions": [
        ".py"
      ]
    }
  },
  // MCP (Model Context Protocol) server configurations
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ]
    },
    "grep-mcp": {
      "type": "local",
      "command": [
        "uvx",
        "grep-mcp"
      ]
    },
    "serena": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--enable-web-dashboard",
        "false",
        "--enable-gui-log-window",
        "false",
        "--project",
        "\"$(pwd)\""
      ]
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    }
  },
  // Array of plugin paths or names
  "plugin": [],
}
